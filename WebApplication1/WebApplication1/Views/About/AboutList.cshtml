
@model List<WebApplication1.Models.TblAbout>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda</h2>

<table class="table table-bordered">
    <tr>
        <th> Hakkımda ID </th>
        <th> Hakkımda Adı </th>
        <th> Sil </th>
        <th> Güncelle </th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID </td>
            <td>@item.Title </td>
            <td><a href="/Category/DeleteAbout/@item.AboutID" class="btn btn-danger">Sil</a> </td>
            <td><a href="/Category/UpdateAbout/@item.Description" class="btn btn-success">Güncelle</a> </td>
        </tr>
    }
</table>
<a href="/About/CreateAbout/" class="btn btn-primary">Yeni Hakkımda Girişi</a>

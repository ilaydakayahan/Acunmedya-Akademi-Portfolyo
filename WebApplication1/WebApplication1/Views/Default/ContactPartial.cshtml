@model WebApplication1.Models.TblContact

<div id="contact" class="section db">
    <div class="container">
        <div class="section-title text-left">
            <h3>İletişim</h3>
            <p>Bana ulaşmak için mesajınızı bırakabilirsiniz, en kısa zamanda dönüş sağlayacağım. 💌</p>
        </div>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }

        <div class="row">
            <div class="col-md-12">
                <div class="contact_form">
                    @using (Html.BeginForm("ContactPartial", "Default", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.NameSurname, new { @class = "form-control", placeholder = "Ad-Soyad", required = "required" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Mail Adresi", type = "email", required = "required" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Telefon Numarası", required = "required" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Mesajınız..", required = "required" })
                                </div>
                            </div>
                            <div class="col-lg-12 text-center">
                                <button class="btn btn-success" type="submit">Mesajı Gönder</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
